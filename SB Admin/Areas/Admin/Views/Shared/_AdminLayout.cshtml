@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["SideNavClass"] ??= "sb-sidenav-dark";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"></script>
</head>

<body>

    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">

        <a class="navbar-brand ps-3"
           asp-area="Admin"
           asp-controller="Dashboard"
           asp-action="Index">
            Admin Panel
        </a>

        <button class="btn btn-link btn-sm me-4" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>

        <ul class="navbar-nav ms-auto me-3">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle"
                   data-bs-toggle="dropdown">
                    <i class="fas fa-user"></i>
                </a>

                <ul class="dropdown-menu dropdown-menu-end">
                    <form method="post"
                          asp-area=""
                          asp-controller="Account"
                          asp-action="Logout">
                        <button class="dropdown-item">Çıkış</button>
                    </form>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">

        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion @ViewData["SideNavClass"]">

                <div class="sb-sidenav-menu">
                    <div class="nav">

                        <div class="sb-sidenav-menu-heading">Core</div>

                        <a class="nav-link"
                           asp-area="Admin"
                           asp-controller="Dashboard"
                           asp-action="Index">
                            <div class="sb-nav-link-icon">
                                <i class="fas fa-tachometer-alt"></i>
                            </div>
                            Dashboard
                        </a>

                        <div class="sb-sidenav-menu-heading">Admin</div>

                        <a class="nav-link"
                           asp-area="Admin"
                           asp-controller="AdminUsers"
                           asp-action="Index">
                            <div class="sb-nav-link-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            Admin Users
                        </a>

                        <div class="sb-sidenav-menu-heading">Layout</div>

                        <a class="nav-link"
                           asp-area="Admin"
                           asp-controller="Dashboard"
                           asp-action="layout_static">
                            Static Layout
                        </a>

                        <a class="nav-link"
                           asp-area="Admin"
                           asp-controller="Dashboard"
                           asp-action="layout_sidenav_light">
                            Light Layout
                        </a>

                        <div class="sb-sidenav-menu-heading">Addons</div>

                        <a class="nav-link"
                           asp-area="Admin"
                           asp-controller="Dashboard"
                           asp-action="Charts">
                            <div class="sb-nav-link-icon">
                                <i class="fas fa-chart-area"></i>
                            </div>
                            Charts
                        </a>

                        <a class="nav-link"
                           asp-area="Admin"
                           asp-controller="Dashboard"
                           asp-action="Tables">
                            <div class="sb-nav-link-icon">
                                <i class="fas fa-table"></i>
                            </div>
                            Tables
                        </a>

                    </div>
                </div>

            </nav>
        </div>

        <div id="layoutSidenav_content">

            <main>
                <div class="container-fluid px-5 py-5">
                    @RenderBody()
                </div>
            </main>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="small text-muted">
                        © Admin Panel
                    </div>
                </div>
            </footer>

        </div>
    </div>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SB Admin Script -->
    <script src="~/js/scripts.js"></script>

    <!-- ChartJS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>

    <!-- SB Admin Chart Demo -->
    <script src="~/assets/demo/chart-area-demo.js"></script>
    <script src="~/assets/demo/chart-bar-demo.js"></script>

    <!-- Datatables -->
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"></script>

    <script src="~/js/datatables-simple-demo.js"></script>


</body>
</html>
