@model AdminUser

@{
    ViewData["Title"] = "Yeni Admin";
}

<h3 class="mt-4">Yeni Admin Ekle</h3>

<div class="card">
    <div class="card-body">

        <form asp-area="Admin"
              asp-controller="AdminUsers"
              asp-action="Create"
              method="post">

            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label>Kullanıcı Adı</label>
                <input asp-for="UserName" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Şifre</label>
                <input name="password" type="password" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Ad</label>
                <input asp-for="FirstName" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Soyad</label>
                <input asp-for="LastName" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Email</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Telefon</label>
                <input asp-for="Phone" class="form-control" />
            </div>

            <button class="btn btn-success">
                Kaydet
            </button>

        </form>

    </div>
</div>
